<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/text_primary</item>
        <item name="alertDialogTheme">@style/AlertDialog</item>
    </style>

    <!-- system components -->
    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/TitleAlertDialog</item>
        <item name="android:textColorPrimary">@color/text_grey</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="TitleAlertDialog" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- my styles -->
    <style name="TodayTextDetailCondition" parent="TextAppearance.AppCompat.Small">
        <item name="android:layout_height">@dimen/general_icon_18_dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawablePadding">@dimen/general_half_padding</item>
    </style>

</resources>
